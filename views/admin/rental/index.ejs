<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>

    <% include ../partials/header.ejs %>

</head>
<body>

    <% include ../partials/nav.ejs %>

    <div class="container">
        <div class="row">

            <% include ../partials/sidebar.ejs %>

            <div class="main_col col-md" role="main">
                <div class="row">
                    <h1 class="col-12"><%= title %></h1>
                </div>

                <div class="row">
                    <a href="/admin/rental/create" class="col-4 btn">Create New Rental</a>
                </div>
                <div class="row">

                    <% if (results) { %>
                    <div class="col-12 list-group">
                        <div class="list-group-item list-group-item-dark header">
                            <div class="row">
                                <div class="col">"Name"</div> 
                                <div class="col">Vacant?</div> 
                            </div>                                    
                        </div>
                        
                        <% results.forEach(function(r) { %>
                        <a href=<%= "/admin/rental/" +  r.id %> class="list-group-item list-group-item-action">
                            <div class="row">
                                <div class="col"><%= r.display_name %></div> 

                                <% if (r.vacant) { %>
                                <div class="col">Yes</div> 
                                <% } else { %>
                                <div class="col">No</div> 
                                <% } %>

                            </div>                                   
                        </a>
                        <% }); %>
                        
                    </div>
                    <% } else { %>
                    <div class="col-12"><div class="row">No rentals to display.</div></div>
                    <% } %>

                </div>
                <br />
            </div>
        </div>
    </div>

</body>
</html>